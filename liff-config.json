{
  "liff": {
    "name": "Bright Sales CRM",
    "description": "AI-powered voice-first CRM for Thai sales teams",
    "icon": "https://your-domain.com/icon-512x512.png",
    "type": "full",
    "url": "https://your-domain.com",
    "features": {
      "ble": false,
      "qrCodeReader": true,
      "shareTargetPicker": true
    },
    "scope": [
      "profile",
      "openid",
      "chat_message.write"
    ],
    "botPrompt": "normal"
  },
  "deployment": {
    "environments": {
      "development": {
        "url": "http://localhost:3999",
        "description": "Development environment for testing"
      },
      "staging": {
        "url": "https://staging.brightsales.app",
        "description": "Staging environment for testing"
      },
      "production": {
        "url": "https://app.brightsales.app",
        "description": "Production environment"
      }
    }
  },
  "manifest": {
    "name": "Bright Sales",
